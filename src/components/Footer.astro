---
interface Props {
  lang?: 'en' | 'es';
}

const { lang = 'en' } = Astro.props;

const targetDate = new Date('2026-12-18T00:00:00');

const labels = {
  en: {
    days: 'Days',
    hours: 'Hours',
    minutes: 'Minutes',
    seconds: 'Seconds',
    release: 'Coming December 18, 2026',
    footer: 'Avengers Doomsday © 2026'
  },
  es: {
    days: 'Días',
    hours: 'Horas',
    minutes: 'Minutos',
    seconds: 'Segundos',
    release: 'Llega el 18 de diciembre de 2026',
    footer: 'Avengers Doomsday © 2026'
  }
};

const t = labels[lang];
---

<section class="relative min-h-screen flex flex-col items-center justify-center overflow-hidden py-20">
  <div class="absolute inset-0 z-0">
    <img 
      src="/assets/backgrounds/hero_bg.jpg" 
      alt="Footer Background" 
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-black/70"></div>
  </div>
  
  <div class="relative z-10 text-center px-4 w-full">
    <h2 class="text-4xl md:text-5xl font-bold mb-8 text-red-600">Avengers Doomsday</h2>
    
    <div class="flex flex-wrap justify-center gap-4 md:gap-8 mb-8">
      <div class="bg-black/60 backdrop-blur-md rounded-lg p-6 min-w-[100px] md:min-w-[140px]">
        <span class="text-4xl md:text-6xl font-bold text-white" id="footer-countdown-days">--</span>
        <p class="text-lg md:text-xl text-gray-300 mt-2">{t.days}</p>
      </div>
      
      <div class="bg-black/60 backdrop-blur-md rounded-lg p-6 min-w-[100px] md:min-w-[140px]">
        <span class="text-4xl md:text-6xl font-bold text-white" id="footer-countdown-hours">--</span>
        <p class="text-lg md:text-xl text-gray-300 mt-2">{t.hours}</p>
      </div>
      
      <div class="bg-black/60 backdrop-blur-md rounded-lg p-6 min-w-[100px] md:min-w-[140px]">
        <span class="text-4xl md:text-6xl font-bold text-white" id="footer-countdown-minutes">--</span>
        <p class="text-lg md:text-xl text-gray-300 mt-2">{t.minutes}</p>
      </div>
      
      <div class="bg-black/60 backdrop-blur-md rounded-lg p-6 min-w-[100px] md:min-w-[140px]">
        <span class="text-4xl md:text-6xl font-bold text-white" id="footer-countdown-seconds">--</span>
        <p class="text-lg md:text-xl text-gray-300 mt-2">{t.seconds}</p>
      </div>
    </div>
    
    <p class="text-xl md:text-2xl text-gray-300 mb-12">{t.release}</p>
    
    <footer class="border-t border-gray-700 pt-8">
      <p class="text-gray-400 mb-4">{t.footer}</p>
      <a 
        href="https://github.com/ACDPDEV" 
        target="_blank" 
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-gray-400 hover:text-white transition-colors"
      >
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        @ACDP10
      </a>
    </footer>
  </div>
</section>

<script define:vars={{ targetDate: targetDate.getTime() }}>
  function updateCountdown() {
    const now = Date.now();
    const distance = targetDate - now;
    
    if (distance <= 0) {
      document.getElementById('footer-countdown-days').textContent = '0';
      document.getElementById('footer-countdown-hours').textContent = '0';
      document.getElementById('footer-countdown-minutes').textContent = '0';
      document.getElementById('footer-countdown-seconds').textContent = '0';
      return;
    }
    
    const days = Math.floor(distance / (1000 * 60 * 60 * 24));
    const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((distance % (1000 * 60)) / 1000);
    
    document.getElementById('footer-countdown-days').textContent = days.toString().padStart(2, '0');
    document.getElementById('footer-countdown-hours').textContent = hours.toString().padStart(2, '0');
    document.getElementById('footer-countdown-minutes').textContent = minutes.toString().padStart(2, '0');
    document.getElementById('footer-countdown-seconds').textContent = seconds.toString().padStart(2, '0');
  }
  
  updateCountdown();
  setInterval(updateCountdown, 1000);
</script>
